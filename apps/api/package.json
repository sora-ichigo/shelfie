{
  "name": "@shelfie/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite-node --watch src/index.ts",
    "build": "vite build",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:db:migrate": "drizzle-kit migrate --config=drizzle.config.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:dev": "DATABASE_URL=$(../../scripts/manage-secret.sh get shelfie-api-database-url -p shelfie-development-484809) drizzle-kit migrate",
    "db:migrate:prod": "DATABASE_URL=$(../../scripts/manage-secret.sh get shelfie-api-database-url -p shelfie-production-485714) drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:studio:dev": "DATABASE_URL=$(../../scripts/manage-secret.sh get shelfie-api-database-url -p shelfie-development-484809) drizzle-kit studio",
    "db:studio:prod": "DATABASE_URL=$(../../scripts/manage-secret.sh get shelfie-api-database-url -p shelfie-production-485714) drizzle-kit studio",
    "db:psql": "bash -c '. ./.env && psql $DATABASE_URL \"$@\"' --",
    "db:psql:dev": "bash -c 'psql $(../../scripts/manage-secret.sh get shelfie-api-database-url -p shelfie-development-484809) \"$@\"' --",
    "db:psql:prod": "bash -c 'psql $(../../scripts/manage-secret.sh get shelfie-api-database-url -p shelfie-production-485714) \"$@\"' --",
    "db:seed": "vite-node src/db/seed.ts",
    "schema:print": "tsx src/graphql/print-schema.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express4": "^1.1.1",
    "@pothos/core": "^4.12.0",
    "@pothos/plugin-errors": "^4.9.0",
    "@pothos/plugin-scope-auth": "^4.1.6",
    "@sentry/node": "^10.37.0",
    "drizzle-orm": "0.45.1",
    "express": "^4.21.2",
    "firebase-admin": "^13.6.0",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.25.0",
    "imagekit": "^6.0.0",
    "pg": "^8.17.1",
    "pino": "^10.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/pg": "^8.16.0",
    "@types/pino-pretty": "^5.0.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "vite": "^7.3.1",
    "vite-node": "^5.2.0",
    "vitest": "^4.0.17"
  }
}
